<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/ivShow_popShopCart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY" />
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/rlBottom_popShopCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp">

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#ff00"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvReal_popShopCart"
                android:text="￥78" />

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#ff00"
                android:id="@+id/tvStock_popShopCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvReal_popShopCart"
                android:text="库存88件" />

            <TextView
                android:layout_marginTop="8dp"
                android:textColor="#ff00"
                android:id="@+id/tvChooseText_popShopCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvStock_popShopCart"
                android:text="请选择  尺码  颜色"
                />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
            <LinearLayout
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="17dp"
                    android:textColor="#336633"
                    android:gravity="center"
                    android:text="颜色"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="60dp"></View>
            </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:textSize="17dp"
                        android:textColor="#336633"
                        android:gravity="center"
                        android:text="尺码"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="60dp"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:textSize="17dp"
                        android:textColor="#336633"
                        android:gravity="center"
                        android:text="数量"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:id="@+id/rl_edit"
                                android:layout_width="match_parent"
                                android:background="@color/qianhui"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                >
                                <TextView
                                    android:textSize="18dp"
                                    android:textColor="#ff00"
                                    android:id="@+id/iv_sub"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:background="@color/white_c"
                                    android:layout_margin="1dp"
                                    android:layout_height="match_parent"
                                    android:text=" — " />
                                <TextView
                                    android:id="@+id/tv_sum"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:background="@color/white_c"
                                    android:layout_margin="1dp"
                                    android:layout_height="match_parent"
                                    android:text="1"
                                    />
                                <TextView
                                    android:textSize="22dp"
                                    android:textColor="#ff00"
                                    android:id="@+id/iv_add"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:background="@color/white_c"
                                    android:layout_margin="1dp"
                                    android:layout_height="match_parent"
                                    android:text=" + " />
                            </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/add_btn"
        android:background="#ff00"
        android:text="确认"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>