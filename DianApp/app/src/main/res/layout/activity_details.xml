<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.bwie.com.dianapp.DetailsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/topbar_background"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="商品详情"
                android:textSize="18dp" />
            <ImageView
                android:background="@drawable/daipingjia"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/detail_img"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <View
            android:background="#336633"
            android:layout_width="match_parent"
            android:layout_height="0.5dp">
        </View>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/details_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="125256"
                android:textSize="20dp" />
            <View
                android:background="#336633"
                android:layout_width="match_parent"
                android:layout_height="0.5dp">
            </View>
            <TextView
                android:id="@+id/details_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="125256"
             />
            <View
                android:background="#336633"
                android:layout_width="match_parent"
                android:layout_height="0.5dp">
            </View>
            <TextView
                android:id="@+id/details_fubiaoti"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="125256"
              />
            <View
                android:background="#336633"
                android:layout_width="match_parent"
                android:layout_height="0.5dp">
            </View>
            <TextView
                android:gravity="center"
                android:id="@+id/details_dianpu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="125256"
               />
            <View
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </View>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RadioGroup
                android:id="@+id/group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/shouye1"
                    android:gravity="center"
                    android:text="供应商"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/radio_btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/fenlei1"
                    android:gravity="center"
                    android:text="店铺"
                    android:textSize="15dp" />
                <RadioButton
                    android:id="@+id/radio_btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/faxian1"
                    android:gravity="center"
                    android:text="关注"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/radio_btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/gouwuche1"
                    android:gravity="center"
                    android:text="购物车"
                    android:textSize="15dp" />
            </RadioGroup>
            <Button
                android:background="#fff0"
                android:layout_weight="3"
                android:text="加入购物车"
                android:id="@+id/join_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
